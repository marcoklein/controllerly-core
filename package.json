{
  "name": "controllerly-core",
  "version": "0.0.2",
  "description": "Controllerly Core for Robust Connection Management with WebRTC.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "test:watch": "mocha --watch --watch-extensions ts -r ts-node/register test/**/*.spec.ts",
    "build": "tsc && parcel build src/index.ts -d build --out-file index.js",
    "preversion": "npm test",
    "version": "npm run build && git add -A build",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcoklein/controllerly-core.git"
  },
  "keywords": [
    "Gamepad",
    "Remote",
    "WebRTC",
    "Typescript",
    "Game",
    "Development",
    "Smartphone"
  ],
  "author": "Marco Klein",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcoklein/controllerly-core/issues"
  },
  "homepage": "https://github.com/marcoklein/controllerly-core#readme",
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "parcel-bundler": "^1.12.3",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "peerjs": "^1.1.0"
  }
}
